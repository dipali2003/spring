<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
                           http://www.springframework.org/schema/beans/spring-beans.xsd">
                           
                           
          <bean class="in.sp.beans.Address" id="address">
          
          <property name="houseno" value="777"/>
          <property name="city" value="pune"/>
          <property name="pincode" value="123455"/>
          
          </bean>                 
       <bean class="in.sp.beans.student" id="stdId" autowire="byName">
          
          <property name="name" value="dipali"/>
          <property name="rollno" value="9"/>
          
          
          </bean>                 
    
    
 </beans>